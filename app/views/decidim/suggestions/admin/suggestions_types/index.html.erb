<div class="card" id="suggestion-types">
  <div class="card-divider">
    <h2 class="card-title">
      <%= t "decidim.admin.titles.suggestions_types" %>
      <%= link_to t("actions.new_suggestion_type", scope: "decidim.admin"),
                  ["new", "suggestions_type"],
                  class: "button tiny button--title" if allowed_to? :create, :suggestion_type %>
    </h2>
  </div>
  <div class="card-section">
    <div class="table-scroll">
      <table class="table-list">
        <thead>
          <tr>
            <th><%= t("models.suggestions_types.fields.title", scope: "decidim.admin") %></th>
            <th><%= t("models.suggestions_types.fields.created_at", scope: "decidim.admin") %></th>
            <th class="actions"><%= t("suggestions_type.actions.title", scope: "decidim.resources") %></th>
          </tr>
        </thead>
        <tbody>
          <% @suggestions_types.each do |suggestion_type| %>
          <tr>
            <td>
              <% if allowed_to? :update, :suggestion_type, suggestion_type: suggestion_type %>
                <%= link_to translated_attribute(suggestion_type.title), edit_suggestions_type_path(suggestion_type) %>
              <% else %>
                <%= translated_attribute suggestion_type.title %></td>
              <% end %>
            <td><%= l suggestion_type.created_at, format: :short %></td>
            <td class="table-list__actions"><%= free_resource_permissions_link(suggestion_type) %></td>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
