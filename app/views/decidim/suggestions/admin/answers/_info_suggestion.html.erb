<div class="card">
  <div class="card-divider">
    <h2 class="card-title">
      <%= link_to "#{t ".suggestions"} > ", suggestions_path %>
      <%= decidim_sanitize translated_attribute(suggestion.title) %>
    </h2>
  </div>

  <div class="card-section">
    <div class="row column">
      <strong><%= t ".description" %>: </strong> <%= decidim_sanitize translated_attribute(suggestion.description) %>
    </div>
    <div class="row column">
      <strong><%= t ".created_at" %>: </strong> <%= l suggestion.created_at, format: :decidim_short %>
    </div>
    <div class="row column">
      <strong><%= t ".state" %>: </strong> <%= I18n.t(suggestion.state, scope: "decidim.suggestions.admin_states") %>
    </div>
    <div class="row column">
      <strong><%= t ".suggestion_votes_count" %>: </strong> <%= suggestion.suggestion_votes_count %>
    </div>
  </div>
</div>
