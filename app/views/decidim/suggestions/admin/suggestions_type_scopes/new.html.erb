<h2 class="process-title-summary">
  <%= t ".title" %>
</h2>

<%= decidim_form_for @form,
                     url: suggestions_type_suggestions_type_scopes_path(params[:suggestions_type_id]),
                     html: { class: "form new_suggestions_type_scopes" } do |f| %>
  <%= render partial: "form", object: f %>

  <div class="button--double form-general-submit">
    <%= f.submit t(".create") %>
    <%= link_to t(".back"), edit_suggestions_type_path(params[:suggestions_type_id]), class: "button" %>
  </div>
<% end %>
